<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/very_dark_blue_two</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Button Styles -->
    <style name="LargeButton">
        <item name="android:background">@color/light_sky_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/very_dark_blue</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:padding">14dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/very_dark_blue</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/very_dark_blue</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

